<div class="new-question-form">
<%= form_for(@question) do |f| %>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title ,class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content %><br>
    <%= f.text_area :content ,class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :tags %><br>
    <%= f.text_field :tags ,class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit 'Create new question', class: 'btn btn-info' %>
  </div>
<% end %>
</div>